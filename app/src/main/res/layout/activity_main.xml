<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tortugas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.042"
            android:id="@+id/txtCabecera"/>
    <ImageView
            android:layout_width="321dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/tmntraph"
            android:id="@+id/tortuga"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCabecera"/>
    <RadioGroup
            android:layout_width="169dp"
            android:layout_height="171dp"
            android:id="@+id/radioGroup"
            android:layout_marginTop="372dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.005"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.163">
        <RadioButton
                android:text="LEONARDO"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/rb_leo"
                android:onClick="radiobuttonClick"

                tools:layout_editor_absoluteX="54dp" tools:layout_editor_absoluteY="483dp"/>


        <RadioButton
                android:text="DONATELO"
                android:layout_width="130dp"
                android:layout_height="43dp"
                android:id="@+id/rb_don"
                android:onClick="radiobuttonClick"
                tools:layout_editor_absoluteY="483dp" tools:layout_editor_absoluteX="234dp"/>


        <RadioButton
                android:text="RAFAEL"
                android:layout_width="121dp"
                android:layout_height="39dp"
                android:id="@+id/rb_rafa"
                android:onClick="radiobuttonClick"
                tools:layout_editor_absoluteY="591dp" tools:layout_editor_absoluteX="45dp"/>

        <RadioButton
                android:text="MIGUEL_ANGEL"
                android:layout_width="152dp"
                android:layout_height="41dp"
                android:id="@+id/migel"
                android:onClick="radiobuttonClick"
                tools:layout_editor_absoluteY="591dp" tools:layout_editor_absoluteX="234dp"/>
    </RadioGroup>

</android.support.constraint.ConstraintLayout>